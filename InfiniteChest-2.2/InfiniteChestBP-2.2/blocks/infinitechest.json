{ 
  "format_version": "1.21.20", 
  "minecraft:block": { 
    "description": { 
      "identifier": "chest:infinite_chest",
      "menu_category": {
                "category": "items",
                "group": "itemGroup.name.chest",
                "is_hidden_in_commands": false
      },
      "traits": {
        "minecraft:placement_direction": {
          "enabled_states": ["minecraft:cardinal_direction"],
          "y_rotation_offset": 180.0
        }
      }
    }, 
    "components": { 
      "minecraft:geometry": "geometry.chest_infinite_chest",
      "minecraft:material_instances": {
        "down" :{
          "render_method": "opaque",
					"texture": "infinite_chest_top"
        },
        "east" : {
          "render_method": "opaque",
					"texture": "infinite_chest_side"
        },
        "north" : {
          "render_method": "opaque",
					"texture": "infinite_chest_front"
        },
        "south" : {
          "render_method": "opaque",
					"texture": "infinite_chest_side"
        },
        "up" : {
          "render_method": "opaque",
					"texture": "infinite_chest_top"
        },
        "west" : {
          "render_method": "opaque",
					"texture": "infinite_chest_side"
        }
			}
    },
    "permutations": [
      { // north
       "condition": "query.block_state ('minecraft:cardinal_direction') == 'north'",
       "components": {
        "minecraft:transformation": {
         "rotation": [0, 0, 0]
        }
       }
      },
      { // south
       "condition": "query.block_state ('minecraft:cardinal_direction') == 'south'",
       "components": {
        "minecraft:transformation": {
         "rotation": [0, 180, 0]
        }
       }
      },
      { // west
       "condition": "query.block_state ('minecraft:cardinal_direction') == 'west'",
       "components": {
        "minecraft:transformation": {
         "rotation": [0, 90, 0]
        }
       }
      },
      { // east
       "condition": "query.block_state ('minecraft:cardinal_direction') == 'east'",
       "components": {
        "minecraft:transformation": {
         "rotation": [0, -90, 0]
        }
       }
      }
     ]
  } 
}