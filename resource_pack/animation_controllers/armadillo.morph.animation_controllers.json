{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.morph.armadillo.walk": {
      "initial_state": "default",
      "states": {
        "default": {
          "transitions": [ { "walking": "variable.walking" } ],
          "blend_transition": 0.2
        },
        "walking": {
          "animations": [ { "armadillo_walk": "math.min(1.4, math.lerp(0.2, 2.4, query.modified_move_speed))" } ],
          "transitions": [ { "default": "!variable.walking" } ],
          "blend_transition": 0.2
        }
      }
    },
    "controller.animation.morph.armadillo.roll_up": {
      "initial_state": "default",
      "states": {
        "default": {
          "transitions": [ { "roll_up": "variable.is_rolled_up" } ],
          "blend_transition": 0.2
        },
        "roll_up": {
          "animations": [ "armadillo_roll_up" ],
          "transitions": [
            { "rolled_up": "variable.is_rolled_up && query.all_animations_finished" },
            { "unroll_fast": "!variable.is_rolled_up" }
          ],
          "blend_transition": 0.2
        },
        "rolled_up": {
          "animations": [ "armadillo_rolled_up" ],
          "transitions": [
            { "unroll_fast": "!variable.is_rolled_up" }
          ],
          "blend_transition": 0.2
        },
        "unroll_fast": {
          "animations": [ "armadillo_unroll_fast" ],
          "transitions": [ { "default": "query.all_animations_finished" } ],
          "blend_transition": 0.2
        }
      }
    }
  }
}
