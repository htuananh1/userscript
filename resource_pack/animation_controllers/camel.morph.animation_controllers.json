{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.morph.camel.general": {
      "initial_state": "idling",
      "states": {
        "idling": {
          "transitions": [
            { "moving": "query.modified_move_speed > 0.05 || query.vertical_speed > 0.05" }
          ],
          "blend_transition": 0.5
        },
        "moving": {
          "animations": [
            { "camel_moving": "math.min(1.0, math.lerp(0.4, 1.25, query.modified_move_speed))" }
          ],
          "transitions": [
            { "idling": "query.modified_move_speed <= 0.05 && query.vertical_speed <= 0.05" }
          ],
          "blend_transition": 0.2
        }
      }
    }
  }
}