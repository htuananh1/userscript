{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.morph.breeze.move": {
      "initial_state": "default",
      "states": {
        "default": {
          "transitions": [
            {
              "moving": "query.modified_move_speed > 0.1 && query.vertical_speed == 0"
            }
          ]
        },
        "moving": {
          "animations": [ "breeze_slide" ],
          "transitions": [
            {
              "default": "query.modified_move_speed < 0.1"
            }
          ],
          "blend_transition": 0.2
        }
      }
    },
    "controller.animation.morph.breeze.ground_particles": {
      "initial_state": "default",
      "states": {
        "default": {
          "transitions": [
            { "idling": "!query.is_moving && query.is_on_ground && query.vertical_speed > -2 && !query.is_riding" },
            { "moving": "query.is_moving && query.is_on_ground && query.vertical_speed > -2 && !query.is_riding" }
          ]
        },
        "idling": {
          "animations": [ "breeze_idle_ground_particles" ],
          "transitions": [
            { "default": "!query.is_on_ground || query.is_riding" },
            { "moving": "query.is_moving && query.is_on_ground && !query.is_riding" }
          ]
        },
        "moving": {
          "animations": [ "breeze_slide_ground_particles" ],
          "transitions": [
            { "default": "!query.is_on_ground || query.is_riding" },
            { "idling": "!query.is_moving && query.is_on_ground && !query.is_riding" }
          ]
        }
      }
    },
    "controller.animation.morph.breeze.jump": {
      "initial_state": "default",
      "states": {
        "default": {
          "transitions": [
            { "jump": "query.is_sneaking && query.is_on_ground" }
          ]
        },
        "jump": {
          "animations": [ "breeze_jump" ],
          "sound_effects": [
            {
              "effect": "breeze_charge"
            }
          ],
          "transitions": [
            { "default": "!query.is_sneaking || !query.is_on_ground" }
          ],
          "blend_transition": 0.2
        }
      }
    }
  }
}
