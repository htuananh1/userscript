{
  "format_version": "1.8.0",
  "render_controllers": {
    "controller.render.morph.donkey.first_person": {
      "geometry": "Geometry.horse",
      "materials": [
        { "*": "Material.horse_alphatest" }
      ],
      "textures": [ "Texture.donkey" ],
      "part_visibility": [
        { "*": false },
        { "LegFR": "query.get_equipped_item_name(0, 1) == '' || query.get_equipped_item_name(0, 1) == 'filled_map' || query.get_equipped_item_name(0) == 'morphing_bracelet'" },
        { "LegFL": "(query.get_equipped_item_name(0, 1) == 'filled_map' && query.get_equipped_item_name('off_hand') != 'shield') || (query.get_equipped_item_name('off_hand') == 'filled_map' && !query.item_is_charged) || (!query.item_is_charged && (variable.item_use_normalized > 0 && variable.item_use_normalized < 1.0))" }
      ]
    },
    "controller.render.morph.donkey.third_person": {
      "part_visibility": [
        { "Saddle": "query.is_saddled" },
        { "Bit*": "query.is_saddled" },
        { "Bridle": "query.is_saddled" },
        { "Reins*" : "query.is_saddled && query.has_rider" },
        { "Bag*" : "query.is_chested" },
        { "Ear*" : false}
      ],
      "geometry": "Geometry.horse",
      "materials": [
        { "*": "Material.horse_alphatest" }
      ],
      "textures": [ "Texture.donkey" ]
    }
  }
}