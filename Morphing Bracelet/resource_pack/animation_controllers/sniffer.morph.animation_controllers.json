{
  "format_version" : "1.10.0",
  "animation_controllers": {
    "controller.animation.morph.sniffer.move": {
      "initial_state": "default",
      "states": {
        "default": {
          "transitions": [
            {
              "walking": "query.modified_move_speed"
            }
          ],
          "blend_transition": 0.2
        },
        "walking": {
          "animations": [
            {
              "sniffer_walk": "math.min(1.0, query.modified_move_speed * 10)"
            },
            {
              "sniffer_bob": "math.min(1.0, query.modified_move_speed * 10)"
            }
          ],
          "transitions": [
            {
              "default": "query.modified_move_speed < 0"
            }
          ],
          "blend_transition": 0.2
        }
      }
    }
  }
}
